{
  "name": "miniprogram-ts-less-quickstart",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "preinstall": "npx only-allow npm",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint --fix --cache ./miniprogram --ext .ts,.js",
    "lint:style": "stylelint --fix ./miniprogram"
  },
  "keywords": [],
  "author": "",
  "license": "",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "miniprogram-api-typings": "^3.0.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.12.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^28.0.0",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "*.{ts,js}": "npm run lint:script",
    "*.less": "npm run lint:style"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recess-order",
      "stylelint-config-standard"
    ],
    "ignoreFiles": [
      "./miniprogram/vant-weapp/**/*",
      "./miniprogram/static/**/*",
      "./**/*.wxml",
      "./**/*.wxss",
      "./**/*.ts",
      "./**/*.json"
    ],
    "overrides": [
      {
        "files": [
          "miniprogram/**/*.less"
        ],
        "customSyntax": "postcss-less",
        "rules": {
          "font-family-no-missing-generic-family-keyword": [
            true,
            {
              "ignoreFontFamilies": [
                "iconfont"
              ]
            }
          ],
          "unit-no-unknown": [
            true,
            {
              "ignoreUnits": [
                "rpx"
              ]
            }
          ],
          "selector-type-no-unknown": [
            true,
            {
              "ignore": [
                "custom-elements",
                "default-namespace"
              ],
              "ignoreNamespaces": [
                "page",
                "swiper",
                "navigator"
              ]
            }
          ],
          "selector-class-pattern": [
            "",
            {}
          ],
          "declaration-block-no-duplicate-properties": [
            true,
            {
              "ignoreProperties": ["/-webkit-/", "/mask-/"]
            }
          ],
          "property-no-vendor-prefix": [null, {}]
        }
      }
    ]
  }
}
